{
	// Use IntelliSense to learn about possible attributes.
	// Hover to view descriptions of existing attributes.
	// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
	"version": "0.2.0",
	"configurations": [
		{
			"name": "make test",
			"type": "go",
			"request": "launch",
			"mode": "test",
			"program": "${input:package}",
			"args": [
				"-test.run",
				"${input:testname}",
			]
		},
		{
			"name": "eval-dev-quality",
			"type": "go",
			"request": "launch",
			"mode": "auto",
			"program": "cmd/eval-dev-quality",
			"args": [
				"${input:args}",
			]
		},
	],
	"inputs": [
		{
			"id": "testname",
			"type": "command",
			"command": "memento.promptString",
			"args": {
				"id": "testname",
				"description": "Which test?",
				"default": "",
			},
		},
		{
			"id": "package",
			"type": "command",
			"command": "shellCommand.execute",
			"args": {
				"command": "tree -I '.github|.vscode|conf|debug|docs|evaluation-*|testdata' -dif .",
				"rememberPrevious":true,
				"taskId": "package",
				"description": "Which package?",
			},
		},
		{
			"id": "args",
			"type": "command",
			"command": "memento.promptString",
			"args": {
				"id": "args",
				"description": "Arguments? (Make sure to use absolute paths!)",
				"default": "",
			},
		},
	],
}
